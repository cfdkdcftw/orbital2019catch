<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personal.loginandregister.LoginActivity">

    <ImageView
        android:id="@+id/forgot_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/catch_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"/>
    <TextView
        android:id="@+id/forgot_password_title"
        android:layout_below="@id/forgot_logo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="An email address will be sent to you to reset your password"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/forgot_email"
        android:layout_below="@+id/forgot_password_title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_input_background"
        android:ems="10"
        android:hint="Email Address"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:inputType="textEmailAddress"
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true"/>

    <Button
        android:id="@+id/forgot_change_password"
        android:layout_below="@id/forgot_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_button_background"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:text="Change your password"
        android:textAllCaps="false"
        android:textColor="@color/deepBlue"
        android:textSize="16sp"/>

    <ProgressBar
        android:id="@+id/registerProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="invisible"/>


</RelativeLayout>