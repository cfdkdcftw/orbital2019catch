<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personal.loginandregister.SelectAccountTypeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/select_type_logo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:srcCompat="@drawable/catch_logo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/select_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_type_logo"
            android:text="Select your account type."
            android:textSize="16dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/personal_account_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_button_background"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:text="Personal Account"
            android:textAllCaps="false"
            android:textColor="@color/deepBlue"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/company_account_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_button_background"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:text="Company Account"
            android:textAllCaps="false"
            android:textColor="@color/deepBlue"
            android:textSize="16dp"/>

