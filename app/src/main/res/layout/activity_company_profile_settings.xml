<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".company.CompanyProfileSettingsActivity">

    <TextView
        android:id="@+id/activity_des"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="12pt"
        android:textStyle="bold"
        android:background="@color/lightBlue3"
        android:textColor="@color/white"
        android:text="Account Details"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/personal_particulars_heading"
            android:layout_below="@+id/email_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:paddingHorizontal="40dp"
            android:paddingVertical="5dp"
            android:textSize="8pt"
            android:textColor="@color/headingBlue2"
            android:textStyle="bold"
            android:text="Particulars"/>

        <TextView
            android:id="@+id/companyname_heading"
            android:layout_below="@+id/activity_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:paddingVertical="5dp"
            android:textSize="6pt"
            android:textColor="@color/themeBlue"
            android:text="Company Name"/>

        <TextView
            android:id="@+id/companyname_display"
            android:layout_below="@+id/companyname_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="7pt"
            android:background="@color/backgroundBlue2"
            android:text="Lorem Ipsum"/>

        <TextView
            android:id="@+id/username_heading"
            android:layout_below="@+id/companyname_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:paddingHorizontal="40dp"
            android:paddingVertical="5dp"
            android:textSize="6pt"
            android:textColor="@color/themeBlue"
            android:text="Name"/>

        <TextView
            android:id="@+id/username_display"
            android:layout_below="@+id/username_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="7pt"
            android:background="@color/backgroundBlue2"
            android:text="Lorem Ipsum"/>

        <TextView
            android:id="@+id/email_heading"
            android:layout_below="@+id/username_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:paddingHorizontal="40dp"
            android:paddingVertical="5dp"
            android:textSize="6pt"
            android:textColor="@color/themeBlue"
            android:text="Email"/>

        <TextView
            android:id="@+id/email_display"
            android:layout_below="@+id/email_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="7pt"
            android:background="@color/backgroundBlue2"
            android:text="loremipsum@gmail.com"/>

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="220dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border_button_background"
            android:ems="10"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/deepBlue"
            android:textSize="16dp" />


    </LinearLayout>


</LinearLayout>